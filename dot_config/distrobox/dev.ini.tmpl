[dev]
image="registry.fedoraproject.org/fedora-toolbox:latest"
pull=true
start_now=true

{{- if eq .chezmoi.hostname "rbmpc" }}
#nvidia=true
{{ end -}}

{{ $home := cat .chezmoi.homeDir /devbox }}

home="{{ .home }}"
entry=false

additional_flags="--hostname 'dev.rbmpc'"

init_hooks="$HOME/devbox/.local/bin/devbox.bash"

exported_bins_path="$HOME/devbox/.local/bin"

exported_bins="/usr/bin/nvim"
exported_bins="$HOME/devbox/.local/opt/bin/nvim-nightly-bin/bin/nvim-nightly-bin"

{{- if eq .chezmoi.hostname "rbmpc" }}
exported_bins="$HOME/devbox/.cargo/bin/neovide"
{{ end -}}

exported_bins="/usr/bin/lazygit"
exported_bins="/usr/bin/fzf"

{{- if eq .chezmoi.hostname "rbmpc" }}
exported_apps="wezterm"
{{ end -}}

