[test]
image="registry.fedoraproject.org/fedora-toolbox:latest"
pull=true
start_now=true

home={{ .testbox }}
entry=false

additional_flags="--hostname 'dev.{{ .chezmoi.hostname }}'"

pre_init_hooks='ln -sf {{ .chezmoi.homeDir }}/.ssh {{ .testbox }}/.ssh'
init_hooks='"sh -c {{ .curlChezmoi }} -- -b {{ .testboxBin }} init {{ .testboxUser }} --apply --force --keep-going --promptDefaults --ssh'
