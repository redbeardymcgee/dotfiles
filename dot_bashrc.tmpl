# Enable the subsequent settings only in interactive sessions
case $- in
*i*) ;;
*) return ;;
esac

shopt -s globstar

PATH="$HOME/.local/bin:$PATH"

source "$HOME/.local/lib/rbm/utils.sh"

export FZF_DEFAULT_OPTS=" \
--color=bg+:#414559,bg:#303446,spinner:#f2d5cf,hl:#e78284 \
--color=fg:#c6d0f5,header:#e78284,info:#ca9ee6,pointer:#f2d5cf \
--color=marker:#f2d5cf,fg+:#c6d0f5,prompt:#ca9ee6,hl+:#e78284"

export BAT_CONFIG_PATH="$HOME/.config/bat.conf"
export MANPAGER="sh -c 'col -bx | bat -l man -p'"
export LG_CONFIG_FILE="$HOME/.config/lazygit/config.yml,$HOME/.config/lazygit/themes/catppuccin/macchiato/blue.yaml"

alias vim="nvim"
alias nnvim="nvim-nightly-bin"
alias nneovide="NEOVIM_BIN=$HOME/local/bin/nvim-nightly-bin neovide"
alias dev="distrobox enter dev"
alias cat="bat"
alias bathelp='bat --plain --language=help'

bhelp() {
	"$@" --help 2>&1 | bathelp
}

{{ if eq .chezmoi.fqdnHostname "dev.rbmpc" }}
setup_atuin() {
	source <(atuin init bash)
	out=$HOME/.local/etc/bash_completion.d/
	if ! [[ -r $out/atuin.bash ]]; then
		atuin gen-completions --shell bash --out-dir "$out"
	fi
}

source ~/.local/share/blesh/ble.sh \
	--noattach \
	--rcfile ~/.config/ble.rc

prepend_to_PATH "$HOME/.cargo/bin"

source <(starship init bash)

setup_atuin

source <(mise activate bash)
{{ end -}}

[[ ${BLE_VERSION-} ]] && ble-attach
