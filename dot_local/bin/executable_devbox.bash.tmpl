#!/usr/bin/env bash

## Unattended setup script for bootstrapping my dev/shell container

set -euo pipefail

if [[ $CONTAINER_ID != "dev" ]]; then
	exec distrobox enter -n dev -- devbox.bash || {
		echo 'CONTAINER_ID != dev'
		exit 1
	}
fi

source "$HOME/.local/lib/rbm/utils.sh"

dl() {
	local args_but_last=${@::$#-1}
	local url=${@:-1}
	curl --proto "=https" --tlsv1.2 -sSLf "$url" ${args_but_last[@]}
}

packages=(
	bat

	cmake
	coreutils

	eza

	fd-find
	fontconfig-devel
	freetype-devel
	fswatch
	fzf

	git-delta

	lazygit
	libxkbcommon-x11
	libXcursor

	neovim

	openssl-devel

	perl-App-cpanminus

	ripgrep

	wezterm

	xclip
	xdotool
	xsel
	xwininfo
)

repos=(
	atim/lazygit
	wezfurlong/wezterm-nightly
)

for repo in "${repos[@]}"; do
	sudo dnf -y copr enable "$repo" #&>/dev/null
done

sudo dnf -y install "${packages[@]}" #&>/dev/null

OPT_DIR=$HOME/.local/opt
NNVIM_DIR=$OPT_DIR/nvim-nightly-bin

setup_nnvim() {
	mkdir -p "$OPT_DIR"
	NNVIM_URL="https://github.com/neovim/neovim/releases/download/nightly/nvim-linux64.tar.gz"
	dl "$NNVIM_URL" |
		tar -C "$OPT_DIR" \
			--strip-components=1 \
			--transform 's,bin/nvim$,bin/nvim-nightly,' \
			--overwrite \
			-xzf -
	nvim --headless '+Lazy! sync' +qa
}

if [[ ! -x $NNVIM_DIR/bin/nvim-nightly-bin ]]; then
	setup_nnvim #&>/dev/null
fi

dl "https://sh.rustup.rs" | sh -s -- -q -y --no-modify-path #&>/dev/null

cargo_packages=(
	atuin
	mise
	starship
)

BINSTALL_URL="https://raw.githubusercontent.com/cargo-bins/cargo-binstall/main/install-from-binstall-release.sh"
{ dl "$BINSTALL_URL" | bash; } #&>/dev/null

cargo binstall -y "${packages[@]}" #&>/dev/null

exit 0
mise use -g 'node@22'     #&>/dev/null
mise use -g 'python@3.12' #&>/dev/null

{{ if hasSuffix "rbmpc" .chezmoi.fqdnHostname }}
cargo_git_packages=("https://github.com/neovide/neovide")

for package in "${cargo_git_packages[@]}"; do
	cargo install --git "$package" "${package##*/}" #&>/dev/null
done
{{ end }}

setup_blesh() {
	BLESH_URL="https://github.com/akinomyoga/ble.sh.git"
	git clone --recursive --depth 1 --shallow-submodules "$BLESH_URL"
	make -k -C ble.sh install PREFIX="$HOME/.local"
	rm -rf ble.sh
}

setup_blesh #&>/dev/null

setup_browsh() {
	dl -o browsh.rpm https://github.com/browsh-org/browsh/releases/download/v1.8.0/browsh_1.8.0_linux_amd64.rpm
	rpm -Uvh ./browsh.rpm
	rm ./browsh.rpm
}

setup_browsh #&>/dev/null

EXPORT_BIN_PATH=$HOME/devbox/bin

export_bins=(
	/usr/bin/bat
	/usr/bin/eza
	/usr/bin/fzf

	{{ if hasSuffix "rbmpc" .chezmoi.fqdnHostname }}
	"$HOME/.cargo/bin/neovide"
	{{ end }}

	/usr/bin/nvim
	"$OPT_DIR/bin/nvim-nightly"
)

for bin in "${export_bins[@]}"; do
	distrobox-export --export-path "$EXPORT_BIN_PATH" --bin "$bin"
done

{{ if eq .chezmoi.hostname "dev" }}
{{ if hasSuffix "rbmpc" .chezmoi.fqdnHostname }}
distrobox-export --app wezterm
{{ end }}
distrobox-export --export-path "$EXPORT_BIN_PATH" --bin /usr/bin/wezterm
{{ end }}
