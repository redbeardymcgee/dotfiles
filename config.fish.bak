if status is-interactive

    abbr -a ls --position anywhere eza
    abbr -a eza eza -lbHo --smart-group --git --git-repos
    abbr -a ld eza -D
    abbr -a lf eza -af --color=always
    abbr -a lh eza -d .* --group-directories-first
