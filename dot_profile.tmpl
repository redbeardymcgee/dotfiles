if [ -n "$BASH_VERSION" ]; then
	if [ -f "$HOME/.bashrc" ]; then
		. "$HOME/.bashrc"
	fi
fi

source_env_files() {
	for env_file; do
		if [ -f "$env_file" ] && [ -r "$env_file" ]; then
			. "$env_file"
		fi
	done
}

prepend_to_PATH() {
	for d; do
		d=$({ cd -- "$d" && { pwd -P || pwd; }; } 2>/dev/null) # canonicalize symbolic links
		if [ -d "$d" ]; then
			case ":$PATH:" in
			*":$d:"*) : ;;
			*)
				PATH="$d:$PATH"
				;;
			esac
		fi # skip nonexistent directory
	done
}

